<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.backend.mapper.RoleMapper">
    <resultMap id="BaseResultMap" type="com.example.backend.entity.Role">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="role_name" jdbcType="VARCHAR" property="roleName" />
        <result column="comment" jdbcType="VARCHAR" property="comment" />
    </resultMap>

    <sql id="Base_Column_List">
        id, role_name, comment
    </sql>

    <select id="getRolePage" parameterType="map" resultMap="BaseResultMap">
        <include refid="getRoleListFragment" />
    </select>
    <select id="getRoleList" parameterType="map" resultMap="BaseResultMap">
        <include refid="getRoleListFragment" />
    </select>
    <sql id="getRoleListFragment">
        SELECT * FROM role
        <where>
            <if test="query.id != null">
                AND id = #{query.id}
            </if>
            <if test="query.roleName != null and query.roleName != ''">
                AND role_name LIKE concat('%',#{query.roleName},'%')
            </if>
        </where>
    </sql>

</mapper>